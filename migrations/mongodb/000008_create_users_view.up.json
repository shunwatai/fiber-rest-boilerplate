[
  {
    "create": "users_view",
    "viewOn": "users",
    "pipeline": [
      {
        "$project": {
          "_id": 1,
          "name": 1,
          "password": 1,
          "first_name": 1,
          "last_name": 1,
          "email": 1,
          "disabled": 1,
          "is_oauth": 1,
          "provider": 1,
          "search": {
            "$concat": [
              { "$ifNull": ["$name", ""] },
              " ",
              { "$ifNull": ["$first_name", ""] },
              " ",
              { "$ifNull": ["$last_name", ""] },
              " ",
              { "$ifNull": ["$email", ""] }
            ]
          }
        }
      }
    ]
  }
]

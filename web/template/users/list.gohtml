{{ define "list"}}
  <div class="rounded-lg border border-gray-200" id="userTable">
    <div class="overflow-x-auto rounded-t-lg">
      <table class="min-w-full divide-y-2 divide-gray-200 bg-white text-sm">
        <thead class="ltr:text-left rtl:text-right">
          <tr>
            <th class="sticky inset-y-0 start-0 bg-white px-4 py-2">
              <label for="SelectAll" class="sr-only">Select All</label>
              <input type="checkbox" id="selectAll" class="size-5 rounded border-gray-300" @click="toggleSelectAll" />
            </th>
            <th class="text-center whitespace-nowrap px-4 py-2 text-gray-900">login name</th>
            <th class="text-center whitespace-nowrap px-4 py-2 text-gray-900">email</th>
            <th class="text-center whitespace-nowrap px-4 py-2 text-gray-900">first name</th>
            <th class="text-center whitespace-nowrap px-4 py-2 text-gray-900">last name</th>
            <th class="text-center whitespace-nowrap px-4 py-2 text-gray-900">disabled</th>
          </tr>
        </thead>

        <tbody class="divide-y divide-gray-200">
        {{- range .users }}
        <tr>
          <td class="text-center sticky inset-y-0 start-0 bg-white px-4 py-2"><input class="size-5 rounded border-gray-300" type="checkbox" name="ids" value={{if not .MongoId}}{{.Id}}{{else}}{{.MongoId}}{{end}} @click="handleCheck" /></td>
          <td class="text-center whitespace-nowrap px-4 py-2 font-medium text-gray-900"><a class="block" href="/users/form?userId={{if not .MongoId}}{{.Id}}{{else}}{{.MongoId}}{{end}}">{{.Name}}</a></td>
          <td class="text-center whitespace-nowrap px-4 py-2 font-medium text-gray-900"><a class="block" href="/users/form?userId={{if not .MongoId}}{{.Id}}{{else}}{{.MongoId}}{{end}}">{{.Email}}</a></td>
          <td class="text-center whitespace-nowrap px-4 py-2 font-medium text-gray-900"><a class="block" href="/users/form?userId={{if not .MongoId}}{{.Id}}{{else}}{{.MongoId}}{{end}}">{{if .FirstName}}{{.FirstName}}{{else}}&nbsp{{end}}</a></td>
          <td class="text-center whitespace-nowrap px-4 py-2 font-medium text-gray-900"><a class="block" href="/users/form?userId={{if not .MongoId}}{{.Id}}{{else}}{{.MongoId}}{{end}}">{{if .LastName}}{{.LastName}}{{else}}&nbsp{{end}}</a></td>
          <td class="text-center whitespace-nowrap px-4 py-2 font-medium text-gray-900"><input class="size-5 rounded border-gray-300" type="checkbox" name="disabled" id={{if not .MongoId}}{{.Id}}{{else}}{{.MongoId}}{{end}} value={{.Name}} {{ if .Disabled }} checked {{end}} /></td>
        </tr>
        {{- end }}
        </tbody>
      </table>
    </div>

    <div class="rounded-b-lg border-t border-gray-200 px-4 py-2">
      <ol class="flex justify-between gap-1 text-xs font-medium">
        <li class="my-auto flex w-full"><div class="w-fix my-auto">items / page:</div>
          <select
            name="items"
            id="items"
            class="w-fit size-8 px-2 rounded-lg border border-gray-100 bg-white text-gray-700 sm:text-sm"
            hx-get="/users/list"
            hx-include="[name='page']"
            hx-target="#userTable"
            hx-swap="outerHTML"
          >
            <option value="5"   {{ if eq 5   $.pagination.Items }} selected {{ end }}>5</option>
            <option value="15"  {{ if eq 15  $.pagination.Items }} selected {{ end }}>15</option>
            <option value="25"  {{ if eq 25  $.pagination.Items }} selected {{ end }}>25</option>
            <option value="100" {{ if eq 100 $.pagination.Items }} selected {{ end }}>100</option>
          </select>
          </li>

        <li class="my-auto flex w-full justify-center">
          <button
            hx-get="/users/list?{{.pagination.PrevPage}}"
            hx-target="#userTable"
            hx-swap="outerHTML"
            class="inline-flex size-8 items-center justify-center rounded border border-gray-100 bg-white text-gray-900 rtl:rotate-180"
          >
            <span class="sr-only">Prev Page</span>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-3 w-3"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                fill-rule="evenodd"
                d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
                clip-rule="evenodd"
              />
            </svg>
          </button>

          <select
            name="page"
            class="w-fit size-8 px-2 rounded-lg border border-gray-100 bg-white text-gray-700 sm:text-sm"
            hx-get="/users/list"
            hx-include="[id='items']"
            hx-target="#userTable"
            hx-swap="outerHTML"
          >
            {{- range $page := Iterate .pagination.TotalPages }}
              <option  value="{{ $page }}" {{ if eq $page $.pagination.Page }} selected {{ end }}> {{ $page }} </option>
            {{- end }}
          </select>
          <button
            hx-get="/users/list?{{.pagination.NextPage}}"
            hx-target="#userTable"
            hx-swap="outerHTML"
            class="inline-flex size-8 items-center justify-center rounded border border-gray-100 bg-white text-gray-900 rtl:rotate-180"
          >
            <span class="sr-only">Next Page</span>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-3 w-3"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                fill-rule="evenodd"
                d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                clip-rule="evenodd"
              />
            </svg>
          </button> 
        </li>

        <li class="my-auto flex w-full justify-end">total records:{{.pagination.Count}}</span></li>
      </ol>
    </div>
  </div>
{{end}}
